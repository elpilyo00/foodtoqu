<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:background="@color/background">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scrollbars="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/splashLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/splashlogo"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/categoryImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/astronaut"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/greenBtn"
            android:layout_below="@id/splashLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/filterBtn"
            android:layout_below="@id/categoryImage"
            android:background="@drawable/round_button_beige"
            android:drawableStart="@drawable/list"
            android:layout_marginLeft="10dp"
            android:text="Filter"
            android:textColor="@color/white"
            android:fontFamily="@font/bungee"
            android:layout_marginTop="10dp"
            android:onClick="showFilterTapped"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:id="@+id/filterTab"
            android:layout_below="@id/filterBtn"
            android:layout_marginTop="5dp"
            android:background="@color/black">

                <LinearLayout
                    android:id="@+id/mood"
                    android:layout_width="270dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/filter_container"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bungee"
                            android:text="Mood"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                                <CheckBox
                                    android:id="@+id/happy"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:button="@drawable/checkbox"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:padding="5dp"
                                    android:text="Happy"
                                    android:textSize="12sp"/>

                                <CheckBox
                                    android:id="@+id/sad"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:button="@drawable/checkbox"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:padding="5dp"
                                    android:text="Sad"
                                    android:textSize="12sp"/>

                                <CheckBox
                                    android:id="@+id/excited"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:button="@drawable/checkbox"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:padding="5dp"
                                    android:text="Excited"
                                    android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/angry"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Angry"
                                    android:textSize="12sp"/>

                                <CheckBox
                                    android:id="@+id/stress"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Stress"
                                    android:textSize="12sp"/>

                                <CheckBox
                                    android:id="@+id/nostalgia"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Nostalgia"
                                    android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/inLove"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="In Love"
                                    android:textSize="12sp"/>

                                <CheckBox
                                    android:id="@+id/calm"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Calm"
                                    android:textSize="12sp"/>
                        </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/healthCondition"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/filter_container"
                    android:orientation="vertical"
                    android:layout_below="@id/mood">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bungee"
                            android:text="Health Condition"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/diabetes"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Diabetes"
                                    android:textSize="12sp"/>

                                <CheckBox
                                    android:id="@+id/gastrointestinal"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Gastrointestinal Disorder"
                                    android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/bowel"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Irritable Bowel Syndrome"
                                    android:textSize="12sp"/>
                                <CheckBox
                                    android:id="@+id/highBlood"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="High Blood Pressure"
                                    android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/weight"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Weight Management"
                                    android:textSize="12sp"/>
                                <CheckBox
                                    android:id="@+id/anemia"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Anemia"
                                    android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/highCholesterol"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="High Cholesterol"
                                    android:textSize="12sp"/>

                                <CheckBox
                                    android:id="@+id/heartDisease"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Heart Disease"
                                    android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/osteoporosis"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Osteoporosis"
                                    android:textSize="12sp"/>

                                <CheckBox
                                    android:id="@+id/celiac"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Celiac Disease"
                                    android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/renal"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Renal Disease"
                                    android:textSize="12sp"/>

                                <CheckBox
                                    android:id="@+id/hypothyroidism"
                                    android:layout_width="180dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:button="@drawable/checkbox"
                                    android:text="Hypothyroidism"
                                    android:textSize="12sp"/>
                        </LinearLayout>


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/recommendBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_button"
                    android:text="Recommend"
                    android:fontFamily="@font/bungee"
                    android:textSize="18sp"/>


        </RelativeLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/filterTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView2"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_below="@id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/home_green"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="5dp"/>


        <ImageView
            android:id="@+id/likeBtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_grey"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/profileBtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_grey"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>
</ScrollView>