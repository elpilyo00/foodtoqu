<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadActivity"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/green_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Food"
                android:textSize="30sp"
                android:fontFamily="@font/bungee"
                android:textColor="@color/black"
                android:textAlignment="center"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/uploadImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/uploading"
                android:layout_marginTop="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/greenBtn"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/foodName"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Food Name"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/calorie"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:inputType="number"
                android:hint="Calorie"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/totalFat"
                android:inputType="number"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Total Fat"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/cholesterol"
                android:inputType="number"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Cholesterol"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/sodium"
                android:inputType="number"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Sodium"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="number"
                android:id="@+id/carbo"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Total Carbohydrate"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/totalSugar"
                android:inputType="number"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Total Sugar"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/protein"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:inputType="number"
                android:hint="Protein"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Health Condition"
                android:textSize="20sp"
                android:fontFamily="@font/bungee"
                android:textColor="@color/black"
                android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/green_border">

            <CheckBox
                android:id="@+id/diabetes"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Diabetes"/>

            <CheckBox
                android:id="@+id/gastrointestinal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Gastrointestinal Disorder"/>

            <CheckBox
                android:id="@+id/bowel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Irritable Bowel Syndrome"/>

            <CheckBox
                android:id="@+id/highBlood"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="High Blood Pressure"/>

            <CheckBox
                android:id="@+id/weight"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Weight Management"/>

            <CheckBox
                android:id="@+id/anemia"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Anemia"/>

            <CheckBox
                android:id="@+id/highCholesterol"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="High Cholesterol"/>

            <CheckBox
                android:id="@+id/heartDisease"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Heart Disease"/>

            <CheckBox
                android:id="@+id/osteoporosis"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Osteoporosis"/>

            <CheckBox
                android:id="@+id/celiac"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Celiac Disease"/>

            <CheckBox
                android:id="@+id/renal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Renal Disease"/>

            <CheckBox
                android:id="@+id/hypothyroidism"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Hypothyroidism"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mood"
            android:textSize="20sp"
            android:fontFamily="@font/bungee"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/green_border">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <CheckBox
                android:id="@+id/happy"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Happy"/>

            <CheckBox
                android:id="@+id/sad"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Sad"/>

            <CheckBox
                android:id="@+id/excited"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Excited"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <CheckBox
                android:id="@+id/angry"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Angry"/>

            <CheckBox
                android:id="@+id/stress"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Stress"/>

            <CheckBox
                android:id="@+id/nostalgia"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Nostalgia"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <CheckBox
                android:id="@+id/inLove"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="In Love"/>

            <CheckBox
                android:id="@+id/calm"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:button="@drawable/checkbox"
                android:text="Calm"/>
            </LinearLayout>


        </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/uploadBtn"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"
                app:cornerRadius="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>